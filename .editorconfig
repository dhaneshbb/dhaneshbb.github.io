# EditorConfig for code style consistency
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{js,mjs}]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.py]
indent_size = 4

[*.svg]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{png,jpg,jpeg,gif,webp,pdf}]
insert_final_newline = false
trim_trailing_whitespace = false
