{
  "name": "dhanesh-portfolio",
  "version": "1.0.0",
  "description": "Professional Data Science Portfolio Website for Dhanesh B.B.",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -l 3000",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "npm run minify:css && npm run minify:js && npm run optimize:images",
    "minify:css": "npx clean-css-cli css/*.css -o dist/css/styles.min.css",
    "minify:js": "npx terser js/*.js -o dist/js/scripts.min.js",
    "optimize:images": "npx imagemin assets/images/* --out-dir=dist/assets/images",
    "lint:css": "npx stylelint css/**/*.css",
    "lint:js": "npx eslint js/**/*.js",
    "lint": "npm run lint:css && npm run lint:js",
    "format": "npx prettier --write \"**/*.{html,css,js,json,md}\"",
    "validate:html": "npx html-validate *.html",
    "test:lighthouse": "npx lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "test:accessibility": "npx pa11y http://localhost:3000",
    "test": "npm run validate:html && npm run test:accessibility",
    "deploy:netlify": "npx netlify deploy --prod --dir=.",
    "deploy:vercel": "npx vercel deploy --prod",
    "deploy:surge": "npx surge . dhanesh-portfolio.surge.sh",
    "clean": "rm -rf dist/ reports/ .cache/",
    "watch:css": "npx nodemon --watch css/ --ext css --exec \"npm run minify:css\"",
    "watch:js": "npx nodemon --watch js/ --ext js --exec \"npm run minify:js\"",
    "serve:dist": "npx serve dist -l 3001",
    "precommit": "npm run lint && npm run format",
    "postinstall": "echo 'Portfolio dependencies installed successfully!'",
    "version": "echo 'Portfolio v1.0.0 - Professional Data Science Website'"
  },
  "keywords": [
    "portfolio",
    "data-science",
    "machine-learning",
    "analytics",
    "python",
    "responsive",
    "professional",
    "resume",
    "cv",
    "personal-website"
  ],
  "author": {
    "name": "Dhanesh B.B.",
    "email": "dhaneshbb5@gmail.com",
    "url": "https://linkedin.com/in/dhaneshbb/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhaneshbb/dhanesh-portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/dhaneshbb/dhanesh-portfolio/issues"
  },
  "homepage": "https://dhaneshbb.github.io/dhanesh-portfolio/",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.50.0",
    "html-validate": "^8.5.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "lighthouse": "^11.0.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^16.0.0",
    "nodemon": "^3.0.1",
    "pa11y": "^7.0.0",
    "prettier": "^3.0.3",
    "serve": "^14.2.1",
    "stylelint": "^15.10.3",
    "surge": "^0.23.1",
    "terser": "^5.19.4",
    "vercel": "^32.0.0"
  },
  "dependencies": {},
  "config": {
    "port": 3000,
    "host": "localhost"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "files": [
    "index.html",
    "about.html",
    "projects.html",
    "experience.html",
    "contact.html",
    "css/",
    "js/",
    "assets/",
    "README.md",
    "LICENSE"
  ],
  "private": false,
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/dhaneshbb"
  },
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 4,
      "string-quotes": "single",
      "no-duplicate-selectors": true,
      "color-hex-case": "lower",
      "color-hex-length": "short"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "lighthouse": {
    "extends": "lighthouse:default",
    "settings": {
      "onlyCategories": [
        "performance",
        "accessibility",
        "best-practices",
        "seo"
      ],
      "formFactor": "desktop",
      "throttling": {
        "rttMs": 40,
        "throughputKbps": 10240,
        "cpuSlowdownMultiplier": 1,
        "requestLatencyMs": 0,
        "downloadThroughputKbps": 0,
        "uploadThroughputKbps": 0
      },
      "auditMode": false,
      "gatherMode": false,
      "disableDeviceEmulation": true,
      "disableCpuThrottling": true,
      "disableNetworkThrottling": true
    }
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "dist/*",
      "reports/*"
    ],
    "delay": 500
  },
  "np": {
    "yarn": false,
    "contents": "."
  }
}
